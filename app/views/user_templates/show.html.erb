<nav>
  <ul>
    <li>
      <a href="/users">Users</a>
    </li>
    <li>
      <a href="/photos">Photos</a>
    </li>
  </ul>
</nav>

<h1><%= @the_user.username %></h1>

<dl>
  <dt>ID</dt>
  <dd><%= @the_user.id %></dd>

  <dt>Edit user</dt>
  <dd>
    <form action="/update_user/<%= @the_user.id %>">
      <label for="username">Username</label>
      <input type="text" name="the_user" id="username" value="<%= @the_user.username %>">
      <button type="submit">Update user</button>
    </form>
  </dd>
</dl>

<h2>Own photos</h2>

<table border="1">
  <tbody>
    <tr>
      <th>Image</th>
      <th>Owner</th>
      <th>Caption</th>
      <th>Posted</th>
      <th></th>
    </tr>
  </tbody>

<% @the_user.own_photos.each do |photo| %>
  <tr>
    <td><img src="<%= photo.image %>" alt=""></td>
    <td><%= @the_user.username %></td>
    <td><%= photo.caption %></td>
    <td><%= photo.created_at %></td>
    <td><a href="/photos/<%= photo.id%>">Show details</a></td>
  </tr>
<% end %>
</table>
