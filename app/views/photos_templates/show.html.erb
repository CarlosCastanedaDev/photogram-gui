<h1>Photo Details</h1>
<dl>
  <dt>Image</dt>
  <dd><img src="<%= @the_photo.image%>" alt=""></dd>

  <dt>Caption</dt>
  <dd><%= @the_photo.caption %></dd>

  <dt>Owner</dt>
  <dd><%= @the_photo.poster.username %></dd>

  <dt>Posted</dt>
  <dd><%= @the_photo.created_at %></dd>

  <dt>Edit Photo</dt>
  <dd>
    <form action="/update_photo/<%= @the_photo.id %>">
    <label for="image">Image</label>
    <input type="text" name="the_image" id="image" value="<%= @the_photo.image %>">

    <label for="caption">Caption</label>
    <textarea type="text" name="the_caption" id="caption"><%= @the_photo.caption %></textarea>

    <button type="submit">Update photo</button>
    </form>
  </dd>

  <dt>Delete photo</dt>
  <dd><a href="/delete_photo/<%= @the_photo.id %>">Delete this photo</a></dd>

</dl>

<h2>Comments</h2>

<table>
  <tbody>
    <tr>
      <th>Commenter</th>
      <th>Comment</th>
      <th>Posted</th>
    </tr>

  <% @the_photo.comments.each do |comment| %>
    <tr>
      <td><%= comment.commenter.username %></td>
      <td><%= comment.body %></td>
      <td><%= comment.created_at %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<h3>Add a new comment</h3>

<form action="/add_comment" method="post">
  <label for="photo_id">Photo ID</label>
  <input type="text" name="the_photo_id" id="photo_id" value="<%= @the_photo.id %>">

  <label for="author_id">Author ID</label>
  <input type="text" name="the_author_id" id="author_id" placeholder="Enter your author ID">

  <label for="comment">Comment</label>
  <textarea name="the_comment" id="comment">Enter a comment...</textarea>

  <button type="submit">Add comment</button>
</form>
